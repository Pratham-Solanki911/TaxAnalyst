{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "India Tax Rules Schema",
  "description": "Structured schema for Indian income tax rules",
  "type": "object",
  "required": ["regime", "financial_year", "slabs", "deductions", "rebates", "surcharges", "cess", "source_urls", "last_updated"],
  "properties": {
    "regime": {
      "type": "string",
      "enum": ["old", "new"],
      "description": "Tax regime type - old or new"
    },
    "financial_year": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$",
      "description": "Financial year in format YYYY-YY (e.g., 2024-25)"
    },
    "slabs": {
      "type": "array",
      "description": "Income tax slabs",
      "items": {
        "type": "object",
        "required": ["min_income", "max_income", "rate"],
        "properties": {
          "min_income": {
            "type": "number",
            "minimum": 0,
            "description": "Minimum income for this slab"
          },
          "max_income": {
            "type": ["number", "null"],
            "minimum": 0,
            "description": "Maximum income for this slab (null for unlimited)"
          },
          "rate": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Tax rate as percentage"
          }
        }
      }
    },
    "deductions": {
      "type": "array",
      "description": "Available tax deductions",
      "items": {
        "type": "object",
        "required": ["section", "name", "max_limit", "applicable_regime"],
        "properties": {
          "section": {
            "type": "string",
            "description": "Section code (e.g., 80C, 80D)"
          },
          "name": {
            "type": "string",
            "description": "Deduction name"
          },
          "description": {
            "type": "string",
            "description": "Detailed description"
          },
          "max_limit": {
            "type": "number",
            "minimum": 0,
            "description": "Maximum deduction limit"
          },
          "applicable_regime": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["old", "new", "both"]
            },
            "description": "Which regimes this applies to"
          },
          "sub_limits": {
            "type": "object",
            "description": "Sub-category limits within the section"
          }
        }
      }
    },
    "rebates": {
      "type": "array",
      "description": "Tax rebates",
      "items": {
        "type": "object",
        "required": ["section", "name", "max_rebate", "income_threshold"],
        "properties": {
          "section": {
            "type": "string",
            "description": "Section code (e.g., 87A)"
          },
          "name": {
            "type": "string",
            "description": "Rebate name"
          },
          "max_rebate": {
            "type": "number",
            "minimum": 0,
            "description": "Maximum rebate amount"
          },
          "income_threshold": {
            "type": "number",
            "minimum": 0,
            "description": "Maximum income to qualify"
          },
          "applicable_regime": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["old", "new", "both"]
            }
          }
        }
      }
    },
    "surcharges": {
      "type": "array",
      "description": "Surcharge rules based on income",
      "items": {
        "type": "object",
        "required": ["min_income", "max_income", "rate"],
        "properties": {
          "min_income": {
            "type": "number",
            "minimum": 0
          },
          "max_income": {
            "type": ["number", "null"],
            "minimum": 0
          },
          "rate": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Surcharge rate as percentage"
          }
        }
      }
    },
    "cess": {
      "type": "object",
      "required": ["rate", "name"],
      "properties": {
        "rate": {
          "type": "number",
          "minimum": 0,
          "description": "Cess rate as percentage"
        },
        "name": {
          "type": "string",
          "description": "Cess name (e.g., Health and Education Cess)"
        }
      }
    },
    "source_urls": {
      "type": "array",
      "description": "Official government sources",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last update"
    }
  }
}
